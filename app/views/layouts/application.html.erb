<!DOCTYPE html>
<html>
  <head>
    <title>TTTshirt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-expand-lg mb-3">
      <div class="container">
        <%= link_to "TTTshirt", root_path, class: 'navbar-brand nwhite bold'%>

        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "ホーム", root_path, class: 'nav-link nwhite' %>
          </li>
          <li class="nav-item">
            <%= link_to "Recent", root_path, class: 'nav-link nwhite' %>
          </li>
          <li class="nav-item">
            <%= link_to "Tシャツを追加する", root_path, class: 'btn btn-secondary nwhite' %>
          </li>
        </ul>

        <ul class="navbar-nav">
          <li class="nav-item">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to current_user.full_name, root_path, class: 'nav-link nwhite' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, class: 'nav-link  btn btn-danger', method: :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link nwhite' %>
              </li>
              <li class="nav-item">
                <%= link_to "登録する", new_user_registration_path, class: 'btn btn-danger' %>
              </li>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>